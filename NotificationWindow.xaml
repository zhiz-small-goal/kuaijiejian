<Window x:Class="Kuaijiejian.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="通知" 
        Height="70" 
        Width="260"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        IsHitTestVisible="False"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded">

    <Border x:Name="NotificationBorder"
            CornerRadius="8" 
            Background="White"
            BorderThickness="1"
            BorderBrush="#e5e7eb"
            Padding="12"
            SizeChanged="NotificationBorder_SizeChanged">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" 
                              BlurRadius="30" 
                              Opacity="0.4"
                              Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 图标 -->
            <Border Grid.Column="0" 
                    Width="32" 
                    Height="32"
                    CornerRadius="16"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="✓" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,1"/>
            </Border>

            <!-- 文字内容 -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Text="主题切换" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="#1f2937"
                           Margin="0,0,0,3"/>
                <TextBlock x:Name="MessageText"
                           Text="已切换到「极简单色」主题！" 
                           FontSize="11" 
                           Foreground="#6b7280"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

